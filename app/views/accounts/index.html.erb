<h1>Listing accounts</h1>

<table>
  <thead>
    <tr>
      <th>Begindate</th>
      <th>Expirydate</th>
      <th>Saldo</th>
      <th>Rate</th>
      <th>Client</th>
      <th>Status</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.beginDate %></td>
        <td><%= account.expiryDate %></td>
        <td><%= account.saldo %></td>
        <td><%= account.rate %></td>
        <td><%= account.client_id %></td>
        <td><%= account.status_id %></td>
        <td><%= account.category_id %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

