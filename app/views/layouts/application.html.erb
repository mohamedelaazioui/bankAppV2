<!DOCTYPE html>
<html ng-app="bankApp">
<head>
  <title>Online Bank</title>
  <%= stylesheet_link_tag 'application', media: 'all',
                          'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
  <script src="/assets/bankApp.js"></script>

  <!--[if lt IE 9]>
  <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js"></script>

  <![endif]-->
</head>

<body>
<div class="container">
  <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
  <% end %>
</div>

<header class="navbar navbar-fixed-top navbar-inverse">
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Online Banking</a>
      </div>
      <div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>
          <li class="active"><a href="/agencies">Agencies</a></li>
          <li class="active"><a href="/dashboard">Dashboard</a></li>
          <% if client_signed_in? %>
            <li class="active"><a href="/accounts">Products</a></li>
          <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if client_signed_in? %>
              Logged in as <strong><%= current_client.firstName %></strong> <strong><%= current_client.lastName %></strong>.
              <%= link_to 'Edit profile', edit_client_registration_path, :class => 'navbar-link' %> |
              <%= link_to "Logout", destroy_client_session_path, method: :delete, :class => 'navbar-link'  %>

          <% else %>
              <span class="glyphicon glyphicon-user"></span><%= link_to "Become Client", new_client_registration_path, :class => 'navbar-link'  %>  |
              <span class="glyphicon glyphicon-user"></span><%= link_to "Login", new_client_session_path, :class => 'navbar-link'  %>
          <% end %>

        </ul>
      </div>
    </div>
  </nav>
</header>



<div class="container">
  <%= yield %>
</div>

</body>

<footer>
  <div class="container">
    Author: Mohamed El Aazioui
  </div>
</footer>
</html>
